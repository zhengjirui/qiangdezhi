<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:le="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.lechuang.jiabin.view.defineView.RoundedImageView
            android:id="@+id/iv_img"
            android:src="@drawable/ic_programa_default"
            android:scaleType="fitXY"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:corner_radius="6dp"
            app:oval="false"/>

        <TextView
            android:id="@+id/tv_xiaoliang"
            android:layout_width="72dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="9dp"
            android:textColor="@color/c_5C5C5C"
            android:textSize="9sp"
            android:background="@drawable/bg_corners5_solid_white"
            android:text="2222"/>

    </FrameLayout>

    <com.lechuang.jiabin.view.defineView.SpannelTextViewGrid
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        le:shopType="1"
        le:drawText="this is title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nowprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="800"
            android:textColor="@color/main"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现价 "
                android:textColor="@color/c_696969"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/tv_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:gravity="bottom"
                android:text="1000"
                android:textColor="@color/c_696969"
                android:textSize="10sp"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>