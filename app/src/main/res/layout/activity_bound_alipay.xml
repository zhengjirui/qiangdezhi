<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FAFAFA"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/c_FFF4E1"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示："
            android:lines="2"
            android:textSize="11sp"
            android:textColor="@color/c_494949"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:lines="2"
            android:textColor="@color/c_494949"
            android:text="请确保支付宝信息准确无误，以免出现提现失败给您带来不便，一经提现，无法退款"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rgb_eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:text="支付宝账号"
                />
            <com.lechuang.jiabin.view.defineView.ClearEditText
                android:id="@+id/et_bound_alipay"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor_main_color"
                android:hint="支付宝帐号"
                android:digits="@string/all_char"
                android:maxLength="18"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rgb_eee"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rgb_eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:minWidth="80dp"
                android:text="用户名称"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <com.lechuang.jiabin.view.defineView.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请输入您的真实姓名"
                android:textCursorDrawable="@drawable/cursor_main_color"
                android:textSize="15sp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rgb_eee"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_bound_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_wancheng"
        android:paddingLeft="13dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
