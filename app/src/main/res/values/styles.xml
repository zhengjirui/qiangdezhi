<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/rgb_666666</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--我的收益通知栏颜色-->
    <style name="statusBarRed" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/rgb_fe596c</item>
    </style>

    <!--会员中心通知栏颜色-->
    <style name="vipStatusBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/rgb_fd758e</item>
    </style>

    <!-- 头部按钮 -->
    <style name="Button_Style_0">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>
    <!--我的fragment-->
    <style name="myCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/myCenter_text15sp</item>
    </style>

    <style name="myCenter_right_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <!-- windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 去掉覆盖层 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置背景颜色 ,去除dialog后面的默认黑色阴影 -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="mDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="FullScreenDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!--支付方式textview-->
    <style name="payStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/payStyle_text17sp</item>
    </style>

    <!--透明通知栏-->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--我的代理收益数字字体样式-->
    <style name="myAgentNum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/payStyle_text17sp</item>
    </style>

    <!--我的代理收益字体样式-->
    <style name="myAgent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--搜索结果展示方式字体样式-->
    <style name="showStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
