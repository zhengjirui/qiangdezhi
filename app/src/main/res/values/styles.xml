    <!--12SP 黑色的字体-->
    <style name="sp12BlackTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/c_848484</item>
    </style>
    <!--16SP 黑色的字体-->
    <style name="sp16BlackTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/rgb_464646</item>
    </style>
    <!--14SP 666666的字体-->
    <style name="sp14666666TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/rgb_666666</item>
    </style>
    <!--10SP 白色的字体-->
    <style name="sp10WhiteTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>
 <!--10SP 黑色的字体-->


    <declare-styleable name="SpannelTextView">
        <attr name="shopType" format="integer"/>
        <attr name="drawText" format="string|reference"/>
    </declare-styleable>
    <!--我的页面条目布局-->
    <style name="My_Item_TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="My_Item_task">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_5D5D5D</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="style_mine_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:src">@drawable/wode_tiaozhuan</item>
    </style>

</resources>
